
@{
    ViewData["Title"] = "Add a Watcher";
}


<div class="text-center">
    <h1 class="display-4">Here is the add a Watcher page</h1>

    <h3>@ViewBag.Success </h3>

    <form action="AddWatcher" method="post">
        <label for="title">Watcher Name</label>
        <input type="text" id="name" name="name" required />
        @ViewBag.nameError

        <input type="submit" value="Add a Watcher" />
    </form>

    <table>
        <thead>
            <tr>
                <td>ID</td>
                <td>Name</td>

            </tr>
        </thead>

        <tbody>

            @foreach (Watcher watcher in ViewBag.AllWatchers)
            {
            <tr>
                <td>@(watcher.WatcherID)</td>
                <td>@(watcher.Name)</td>
            </tr>
            }
        </tbody>
    </table>





</div>
